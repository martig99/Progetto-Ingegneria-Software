<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.ChoiceBox?>

<AnchorPane prefHeight="125.0" prefWidth="350" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unipr.java.main.UpsertBoatController">
    <children>
    	<VBox prefHeight="125.0"  prefWidth="350" alignment="CENTER">
    		<children>
        		<HBox prefWidth="300.0">
        			<children>
		            	<Label text="Name:" prefWidth="100.0">
		            		<font>
		               			<Font name="Arial" size="12.0" />
		               		</font>
		               		<HBox.margin>
								<Insets bottom="5.0" left="10.0" right="0.0" top="15.0" />
							</HBox.margin>
		            	</Label>
		            	<TextField fx:id="name" prefWidth="220.0">
		            		<font>
		               			<Font name="Arial" size="12.0" />
		               		</font>
		               		<HBox.margin>
								<Insets bottom="5.0" left="10.0" right="10.0" top="10.0" />
							</HBox.margin>
		               	</TextField>
               		</children>
               	</HBox>
               	<HBox>
               		<children>
		            	<Label text="Length (mt):" prefWidth="100.0">
		            		<font>
		               			<Font name="Arial" size="12.0" />
		               		</font>
		               		<HBox.margin>
								<Insets bottom="5.0" left="10.0" right="0.0" top="5.0" />
							</HBox.margin>
		            	</Label>
		            	<TextField fx:id="length" prefWidth="220.0">
		            		<font>
		               			<Font name="Arial" size="12.0" />
		               		</font>
		               		<HBox.margin>
								<Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
							</HBox.margin>
		            	</TextField>
					</children>
				</HBox>
				<HBox fx:id="boxUser" visible="false" managed="false">
               		<children>
		            	<Label text="User:" prefWidth="100.0">
		            		<font>
		               			<Font name="Arial" size="12.0" />
		               		</font>
		               		<HBox.margin>
								<Insets bottom="5.0" left="10.0" right="0.0" top="10.0" />
							</HBox.margin>
		            	</Label>
		            	<ChoiceBox fx:id="users" value="User" prefWidth="220.0"> 
						    <HBox.margin>
								<Insets bottom="5.0" left="10.0" right="0.0" top="5.0" />
							</HBox.margin>
						</ChoiceBox>
					</children>
				</HBox>
		        <Button fx:id="upsertButton" minWidth="80.0" mnemonicParsing="false" text="Save">
		        	<font>
						<Font name="Arial" size="12.0" />
					</font>
					<VBox.margin>
						<Insets bottom="10.0" left="260.0" right="10.0" top="5.0" />
					</VBox.margin>
		        </Button>
	        </children>
        </VBox>
    </children>
</AnchorPane>