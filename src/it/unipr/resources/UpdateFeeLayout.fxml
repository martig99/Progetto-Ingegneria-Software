<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox prefHeight="550.0" prefWidth="900.0" alignment="CENTER" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unipr.java.main.UpdateFeeController">
    <children>
    	<Text fx:id="title" fill="#0093ed" strokeType="OUTSIDE" text="">
        	<font>
       			<Font name="Arial Black" size="16.0" />
        	</font>
        	<VBox.margin>
        		<Insets bottom="10.0" left="0.0" right="0.0" top="10.0" />
        	</VBox.margin>
        </Text>
    	<TextField fx:id="amount" promptText="Amount" maxWidth="400.0">
         	<font>
            	<Font name="Arial" size="14.0" />
            </font>
            <VBox.margin>
				<Insets bottom="10.0" left="0.0" right="0.0" top="10.0" />
			</VBox.margin>
		</TextField>
		<TextField fx:id="validityPeriod" promptText="Validity Period" maxWidth="400.0">
        	<font>
           		<Font name="Arial" size="14.0" />
           	</font>
           	<VBox.margin>
				<Insets bottom="10.0" left="0.0" right="0.0" top="0.0" />
			</VBox.margin>
        </TextField>
        <Button fx:id="updateButton" minWidth="400.0" mnemonicParsing="false" text="Save" textFill="WHITE" style="-fx-background-color: linear-gradient(to bottom right, #0093ed, #32e2d3);">
			<font>
				<Font name="Arial" size="14.0" />
			</font>
			<VBox.margin>
				<Insets bottom="10.0" left="0.0" right="0.0" top="10.0" />
			</VBox.margin>
		</Button>
		<Text fx:id="link" fill="#32e2d3" strokeType="OUTSIDE" text="GO BACK">
           	<font>
           		<Font name="Arial Black" size="16.0" />
           	</font>
           	<VBox.margin>
            	<Insets bottom="20.0" left="0.0" right="0.0" top="10.0" />
            </VBox.margin>
        </Text>
    </children>
</VBox>