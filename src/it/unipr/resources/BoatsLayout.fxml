<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.text.Text?>

<VBox prefHeight="550.0" prefWidth="800.0" alignment="CENTER" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unipr.java.main.BoatsController">
	<children>
		<Text fx:id="info" strokeType="OUTSIDE" text="" textAlignment="CENTER">
			<font>
				<Font name="Arial" size="12.0" />
			</font>
			<VBox.margin>
				<Insets bottom="10.0" left="0.0" right="0.0" top="0.0" />
			</VBox.margin>
		</Text>
		<TableView fx:id="boatsTable" prefHeight="300.0">
			<columns>
				<TableColumn fx:id="idColumn" prefWidth="50.0" resizable="false" text="Id" />
				<TableColumn fx:id="nameColumn" prefWidth="225.0" resizable="false" text="Name" />
				<TableColumn fx:id="lengthColumn" prefWidth="100.0" resizable="false" text="Length" />
				<TableColumn fx:id="storageFeeColumn" prefWidth="100.0" resizable="false" text="Storage Fee" />
				<TableColumn fx:id="ownerColumn" prefWidth="200.0" resizable="false" text="Owner" visible="false" />
			</columns>
			<VBox.margin>
				<Insets bottom="15.0" left="30.0" right="30.0" top="0.0" />
			</VBox.margin>
			<padding>
				<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
			</padding>
		</TableView>
		<Button fx:id="addButton" mnemonicParsing="false" maxWidth="200.0" text="ADD BOAT" textFill="#ffffff" style="-fx-background-color: linear-gradient(to bottom right, #0093ed, #32e2d3);">
			<font>
				<Font name="Arial" size="18.0" />
			</font>
			<HBox.margin>
				<Insets bottom="30.0" left="0.0" right="0.0" top="0.0" />
			</HBox.margin>
		</Button>
   </children>
</VBox>