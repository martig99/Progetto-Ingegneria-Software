<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.text.Text?>


<VBox prefHeight="550.0" prefWidth="900.0" alignment="CENTER" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unipr.java.main.RaceRegistrationsController">
	<children>
		<Text fx:id="title" fill="#0093ed" strokeType="OUTSIDE" text="">
        	<font>
       			<Font name="Arial Black" size="16.0" />
        	</font>
        	<VBox.margin>
        		<Insets bottom="10.0" left="0.0" right="0.0" top="10.0" />
        	</VBox.margin>
        </Text>
		<Text fx:id="info" strokeType="OUTSIDE" text="" textAlignment="CENTER">
			<font>
				<Font name="Arial" size="12.0" />
			</font>
			<VBox.margin>
				<Insets bottom="10.0" left="0.0" right="0.0" top="0.0" />
			</VBox.margin>
		</Text>
		<TableView fx:id="registrationsTable" prefHeight="300.0">
			<columns>
				<TableColumn fx:id="idColumn" prefWidth="50.0" resizable="false" text="Id" />
				<TableColumn fx:id="dateColumn" prefWidth="150.0" resizable="false" text="Date of registration" />
				<TableColumn fx:id="boatColumn" prefWidth="200.0" resizable="false" text="Boat" />
				<TableColumn fx:id="memberColumn" prefWidth="250.0" resizable="false" text="Member" />
			</columns>
			<VBox.margin>
				<Insets bottom="15.0" left="30.0" right="30.0" top="0.0" />
			</VBox.margin>
			<padding>
				<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
			</padding>
		</TableView>
		<Text fx:id="link" fill="#32e2d3" strokeType="OUTSIDE" text="ALL RACES">
           	<font>
           		<Font name="Arial Black" size="16.0" />
           	</font>
           	<VBox.margin>
            	<Insets bottom="25.0" left="0.0" right="0.0" top="10.0" />
            </VBox.margin>
        </Text>
   </children>
</VBox>