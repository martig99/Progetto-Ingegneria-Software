<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<BorderPane prefHeight="550.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unipr.java.main.MainController">
	<top>
		<HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="900.0" fx:id="menu" visible="false">
			<children>
				<ImageView fitHeight="90.0" fitWidth="95.0" pickOnBounds="true" preserveRatio="true">
					<image>
						<Image url="@logo.PNG" />
					</image>
					<HBox.margin>
						<Insets bottom="0.0" left="25.0" right="25.0" top="10.0" />
					</HBox.margin>
				</ImageView>
				<Text fx:id="linkBoats" fill="#007ecc" strokeType="OUTSIDE" text="BOATS">
					<font>
						<Font name="Arial Black" size="18.0" />
					</font>
					<HBox.margin>
						<Insets bottom="0.0" left="20.0" right="20.0" top="50.0" />
					</HBox.margin>
				</Text>
				<Text fx:id="linkRaces" fill="#0eaae6" strokeType="OUTSIDE" text="RACES">
					<font>
						<Font name="Arial Black" size="18.0" />
					</font>
					<HBox.margin>
						<Insets bottom="0.0" left="20.0" right="20.0" top="50.0" />
					</HBox.margin>
				</Text>
				<Text fx:id="linkPayments" fill="#49cee9" strokeType="OUTSIDE" text="PAYMENTS">
					<font>
						<Font name="Arial Black" size="18.0" />
					</font>
					<HBox.margin>
						<Insets bottom="0.0" left="20.0" right="20.0" top="50.0" />
					</HBox.margin>
				</Text>
				<Text fx:id="linkFees" fill="#66dde5" strokeType="OUTSIDE" text="FEES" visible="false" managed="false">
					<font>
						<Font name="Arial Black" size="18.0" />
					</font>
					<HBox.margin>
						<Insets bottom="0.0" left="20.0" right="20.0" top="50.0" />
					</HBox.margin>
				</Text>
				<Text fx:id="linkUsers" fill="#90eee8" strokeType="OUTSIDE" text="USERS" visible="false" managed="false">
					<font>
						<Font name="Arial Black" size="18.0" />
					</font>
					<HBox.margin>
						<Insets bottom="0.0" left="20.0" right="20.0" top="50.0" />
					</HBox.margin>
				</Text>
				<ImageView fx:id="logout" fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
					<image>
						<Image url="@exit.PNG" />
					</image>
					<HBox.margin>
						<Insets bottom="0.0" left="25.0" right="25.0" top="40.0" />
					</HBox.margin>
				</ImageView>
			</children>
		</HBox>
	</top>
</BorderPane>