    <children>
    	<Text fx:id="title" fill="#0093ed" strokeType="OUTSIDE" text="">
        	<font>
       			<Font name="Arial Black" size="16.0" />
        	</font>
        	<VBox.margin>
        		<Insets bottom="10.0" left="0.0" right="0.0" top="10.0" />
        	</VBox.margin>
        </Text>
	    <ChoiceBox fx:id="members" value="Member" prefWidth="400.0" minHeight="25.0" visible="false" managed="false"> 
		    <VBox.margin>
				<Insets bottom="5.0" left="0.0" right="0.0" top="5.0" />
			</VBox.margin>
		</ChoiceBox>
		<ChoiceBox fx:id="boats" value="Boat" prefWidth="400.0" minHeight="25.0"> 
		    <VBox.margin>
				<Insets bottom="5.0" left="0.0" right="0.0" top="5.0" />
			</VBox.margin>
		</ChoiceBox>
		<ChoiceBox fx:id="paymentServices" value="Payment service" prefWidth="400.0" minHeight="25.0"> 
