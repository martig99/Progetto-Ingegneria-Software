		</ChoiceBox>
		<Button fx:id="saveButton" minWidth="400.0" mnemonicParsing="false" text="Save" textFill="WHITE" style="-fx-background-color: linear-gradient(to bottom right, #0093ed, #32e2d3);">
        	<font>
				<Font name="Arial" size="16.0" />
			</font>
			<VBox.margin>
				<Insets bottom="10.0" left="0.0" right="0.0" top="10.0" />
			</VBox.margin>
        </Button>
        <Text fx:id="link" fill="#32e2d3" strokeType="OUTSIDE" text="GO BACK">
           	<font>
           		<Font name="Arial Black" size="16.0" />
           	</font>
