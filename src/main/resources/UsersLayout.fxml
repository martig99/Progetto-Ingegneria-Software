<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>

<VBox prefHeight="550.0" prefWidth="900.0" alignment="CENTER" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.java.it.unipr.controller.UsersController">
	<children>
		<HBox fx:id="menu" alignment="CENTER">
			<children>
				<Text fx:id="members" fill="#90eee8" strokeType="OUTSIDE" text="MEMBERS">
					<font>
						<Font name="Arial Black" size="13.0" />
					</font>
					<HBox.margin>
						<Insets bottom="5.0" left="0.0" right="10.0" top="0.0" />
					</HBox.margin>
				</Text>
				<Text fx:id="employees" fill="#90eee8" strokeType="OUTSIDE" text="EMPLOYEES">
					<font>
						<Font name="Arial Black" size="13.0" />
					</font>
					<HBox.margin>
						<Insets bottom="5.0" left="10.0" right="0.0" top="0.0" />
					</HBox.margin>
				</Text>
			</children>
		</HBox>
		<Text fx:id="info" strokeType="OUTSIDE" text="" textAlignment="CENTER">
			<font>
				<Font name="Arial" size="12.0" />
			</font>
			<VBox.margin>
				<Insets bottom="10.0" left="0.0" right="0.0" top="0.0" />
			</VBox.margin>
		</Text>
		<TableView fx:id="usersTable" prefHeight="300.0">
			<columns>
				<TableColumn fx:id="idColumn" prefWidth="50.0" resizable="false" text="Id" />
				<TableColumn fx:id="fiscalCodeColumn" prefWidth="125.0" resizable="false" text="Fiscal Code" />
				<TableColumn fx:id="firstNameColumn" prefWidth="100.0" resizable="false" text="First Name" />
				<TableColumn fx:id="lastNameColumn" prefWidth="100.0" resizable="false" text="Last Name" />
				<TableColumn fx:id="emailColumn" prefWidth="150.0" resizable="false" text="Email" />
				<TableColumn fx:id="addressColumn" prefWidth="200.0" resizable="false" text="Address" />
				<TableColumn fx:id="administratorColumn" prefWidth="100.0" resizable="false" text="Administrator" visible="false" />
			</columns>
			<VBox.margin>
				<Insets bottom="15.0" left="30.0" right="30.0" top="0.0" />
			</VBox.margin>
			<padding>
				<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
			</padding>
		</TableView>
		<Button fx:id="addButton" mnemonicParsing="false" maxWidth="200.0" text="" textFill="#ffffff" style="-fx-background-color: linear-gradient(to bottom right, #0093ed, #32e2d3);">
			<font>
				<Font name="Arial" size="16.0" />
			</font>
			<HBox.margin>
				<Insets bottom="30.0" left="0.0" right="0.0" top="0.0" />
			</HBox.margin>
		</Button>
   </children>
</VBox>